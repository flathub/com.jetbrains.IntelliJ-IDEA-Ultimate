{
  "app-id": "com.jetbrains.IntelliJ-IDEA-Ultimate",
  "command": "idea",
  "runtime": "org.freedesktop.Sdk",
  "runtime-version": "18.08",
  "separate-locales": false,
  "sdk": "org.freedesktop.Sdk",
  "finish-args": [
    "--device=all",
    "--device=dri",
    "--env=IDEA_JDK=/app/extra/idea-IU/jre64/",
    "--env=IDEA_VM_OPTIONS=/app/extra/idea-IU/bin/idea64.vmoptions",
    "--filesystem=host",
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    "shared-modules/gtk2/gtk2.json",
    {
      "name": "libsecret",
      "cleanup": [
        "/bin",
        "/include",
        "/lib/*.la",
        "/lib/debug",
        "/lib/pkgconfig"
      ],
      "config-opts": [
        "--disable-gtk-doc",
        "--disable-introspection",
        "--disable-manpages",
        "--disable-static"
      ],
      "sources": [
        {
          "type": "archive",
          "sha256": "f4fa198d4e131f94d9ec84cfeaf6c124245e7ff3c0af11c76cc35332bfae5585",
          "url": "https://gitlab.gnome.org/GNOME/libsecret/-/archive/0.18.6/libsecret-0.18.6.tar.gz"
        }
      ]
    },
    {
      "name": "idea-iu",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 idea.sh /app/bin/idea",
        "install -Dm0755 -t /app/bin/ apply_extra",
        "install -Dm0644 -t /app/share/applications/ com.jetbrains.IntelliJ-IDEA-Ultimate.desktop",
        "install -Dm0644 -t /app/share/icons/hicolor/scalable/apps/ com.jetbrains.IntelliJ-IDEA-Ultimate.svg",
        "install -Dm0644 -t /app/share/metainfo/ com.jetbrains.IntelliJ-IDEA-Ultimate.appdata.xml"
      ],
      "sources": [
        {
          "type": "extra-data",
          "filename": "ideaIU.tar.gz",
          "only-arches": ["x86_64"],
          "sha256": "885dc4fc4da5a277dcf149d7ab8fcb4ce09d1a8ed14e8e615bf6f817f386b7a4",
          "size": 687806953,
          "url": "https://download.jetbrains.com/idea/ideaIU-2018.3.2.tar.gz"
        },
        {
          "type": "file",
          "path": "com.jetbrains.IntelliJ-IDEA-Ultimate.appdata.xml"
        },
        {
          "type": "file",
          "path": "com.jetbrains.IntelliJ-IDEA-Ultimate.desktop"
        },
        {
          "type": "file",
          "path": "com.jetbrains.IntelliJ-IDEA-Ultimate.svg"
        },
        {
          "type": "script",
          "commands": [
            "mkdir idea-IU/",
            "tar -xzf ideaIU.tar.gz --directory=idea-IU/ --strip-components=1",
            "rm -rf idea-IU/plugins/tfsIntegration/lib/native/{macosx,solaris,win32}",
            "rm -f ideaIU.tar.gz"
          ],
          "dest-filename": "apply_extra"
        },
        {
          "type": "script",
          "commands": [
            "ln -s /proc/mounts /etc/mtab",
            "exec env TMPDIR=${XDG_CACHE_HOME}/tmp/ /app/extra/idea-IU/bin/idea.sh \"$@\""
          ],
          "dest-filename": "idea.sh"
        }
      ]
    }
  ]
}
