{
    "app-id": "com.jetbrains.IntelliJ-IDEA-Ultimate",
    "runtime": "org.freedesktop.Sdk",
    "runtime-version": "25.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "idea-wrapper",
    "finish-args": [
        "--socket=x11",
        "--socket=pulseaudio",
        "--socket=ssh-auth",
        "--share=ipc",
        "--share=network",
        "--device=all",
        "--filesystem=home",
        "--env=JAVA_HOME=/app/extra/jbr",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets",
        "--env=IDEA_PROPERTIES=/app/bin/idea.properties",
        "--filesystem=xdg-run/app/com.discordapp.Discord:create",
        "--filesystem=xdg-run/docker",
        "--filesystem=xdg-run/gnupg",
        "--filesystem=xdg-run/keyring",
        "--filesystem=xdg-run/pipewire-0",
        "--filesystem=xdg-run/podman",
        "--socket=gpg-agent"
    ],
    "modules": [
        {
            "name": "idea",
            "build-commands": [
                "install -D -t ${FLATPAK_DEST}/bin/ apply_extra idea-wrapper idea.properties",
                "install -Dm644 -t ${FLATPAK_DEST}/share/applications/ ${FLATPAK_ID}.desktop",
                "install -Dm644 -t ${FLATPAK_DEST}/share/metainfo/ ${FLATPAK_ID}.metainfo.xml",
                "install -Dm644 -t ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/ ${FLATPAK_ID}.svg"
            ],
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "extra-data",
                    "filename": "idea.tar.gz",
                    "only-arches": [
                        "aarch64"
                    ],
                    "sha256": "bf292cf0a2822c4b697e4d1e6a7c049c6b91f8cab3d457259d52fd65bbdcdea9",
                    "size": 1774139359,
                    "url": "https://download.jetbrains.com/idea/ideaIU-2025.2.1-aarch64.tar.gz",
                    "x-checker-data": {
                        "code": "IIU",
                        "is-main-source": true,
                        "type": "jetbrains"
                    }
                },
                {
                    "type": "extra-data",
                    "filename": "idea.tar.gz",
                    "only-arches": [
                        "x86_64"
                    ],
                    "sha256": "ac36d03153894f393fb65c05f57be4722c2a2374d03b7374b37baf856705d5fd",
                    "size": 1777088273,
                    "url": "https://download.jetbrains.com/idea/ideaIU-2025.2.1.tar.gz",
                    "x-checker-data": {
                        "code": "IIU",
                        "is-main-source": true,
                        "type": "jetbrains"
                    }
                },
                {
                    "type": "file",
                    "path": "com.jetbrains.IntelliJ-IDEA-Ultimate.desktop"
                },
                {
                    "type": "file",
                    "dest-filename": "com.jetbrains.IntelliJ-IDEA-Ultimate.svg",
                    "sha256": "77950f507eab46765204cf67639808bd37f7233dce6223954dacae45bd246a84",
                    "url": "https://resources.jetbrains.com/storage/products/company/brand/logos/IntelliJ_IDEA_icon.svg"
                },
                {
                    "type": "file",
                    "path": "com.jetbrains.IntelliJ-IDEA-Ultimate.metainfo.xml"
                },
                {
                    "type": "file",
                    "path": "idea.properties"
                },
                {
                    "type": "script",
                    "dest-filename": "apply_extra",
                    "commands": [
                        "tar xzf idea.tar.gz --strip-components=1",
                        "rm idea.tar.gz"
                    ]
                },
                {
                    "type": "script",
                    "dest-filename": "idea-wrapper",
                    "commands": [
                        "/app/extra/bin/idea $@"
                    ]
                }
            ]
        }
    ]
}
