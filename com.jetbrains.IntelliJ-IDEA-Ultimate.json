{
    "app-id": "com.jetbrains.IntelliJ-IDEA-Ultimate",
    "command": "idea",
    "runtime": "org.freedesktop.Sdk",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "separate-locales": false,
    "finish-args": [
        "--device=dri",
        "--filesystem=host",
        "--filesystem=xdg-run/keyring",
        "--share=ipc",
        "--share=network",
        "--socket=ssh-auth",
        "--socket=wayland",
        "--socket=x11",
